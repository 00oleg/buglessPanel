.m-panel
    &.left
        transform translateX(-100%)
    &.right
        transform translateX(100%)
    &.bottom
        transform translateY(100%)
    &.top
        transform translateY(-100%)
    display none
    overflow scroll
    -webkit-overflow-scrolling touch
    -moz-overflow-scrolling touch
    overflow-scrolling touch
    will-change transform
    position fixed
    left 0
    top 0
    height 100%
    width 100%
    background #9a9a9a
    z-index 1000

.animate
    transition all .2s linear
